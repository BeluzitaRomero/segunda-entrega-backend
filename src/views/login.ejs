<!DOCTYPE html>
<html lang="en">
  <%- include("templates/head") %>
  <body style="background-color: rgb(58, 61, 70)">
    <section style="width: 50%; margin: auto">
      <h1 style="text-align: center; color: white">Login</h1>

      <form
        action="/login"
        method="get"
        onSubmit="user();return false"
        style="color: white; font-weight: bold"
      >
        <div class="mb-3">
          <label for="user" class="form-label" style="font-size: 1.5rem"
            >Nombre de usuario</label
          >
          <input
            type="text"
            name="user"
            class="form-control"
            id="user"
            placeholder="Nombre de producto"
            style="
              background: none;
              border: none;
              border-bottom: 2px solid rgb(228, 228, 228);
              color: white;
            "
          />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </section>
    <script>
      const user = () => {
        const user = document.getElementById("user").value;
        return user;
      };
    </script>
  </body>
</html>
